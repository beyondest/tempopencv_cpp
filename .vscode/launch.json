{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "custom debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/exe/myapp",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            //"preLaunchTask": "CMake Build", 
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
